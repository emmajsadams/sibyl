{
  "name": "sibyl",
  "version": "0.5.13",
  "module": "src/main.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.47.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun --watch run src/main.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "prepare": "husky",
    "sft:convert": "bun run sft/src/convert.ts",
    "sft:stats": "bun run sft/src/stats.ts",
    "sft:train": "cd sft && uv run python3 train.py",
    "sft:lint": "cd sft && uv run ruff check .",
    "sft:test": "cd sft && uv run pytest"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "zod": "^4.3.6"
  }
}
